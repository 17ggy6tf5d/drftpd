<?xml version="1.0" ?>
<!DOCTYPE plugin PUBLIC "-//JPF//Java Plug-in Manifest 1.0" "http://jpf.sourceforge.net/plugin_1_0.dtd">
<plugin id="org.drftpd.master.plugins.sitebot.announce.trialmanager.toptrial" version="3.4.2">
	<doc>
		<doc-text>(Sitebot) - This plugin provides TopTrial (TrialManager) announcements for Sitebot</doc-text>
	</doc>

	<requires>
		<import plugin-id="org.drftpd.master.plugins.trialmanager.toptrial" />
		<import plugin-id="org.drftpd.master.plugins.sitebot" />
	</requires>
	<runtime>
		<library id="org.drftpd.master.plugins.sitebot.announce.trialmanager.toptrial" path="classes/" type="code" />
	</runtime>
	<extension plugin-id="org.drftpd.master.plugins.sitebot" point-id="Announce" id="TopTrialAnnounce">
		<parameter id="Class" value="org.drftpd.master.plugins.sitebot.announce.trialmanager.toptrial.TopTrialAnnouncer" />
	</extension>
</plugin>
