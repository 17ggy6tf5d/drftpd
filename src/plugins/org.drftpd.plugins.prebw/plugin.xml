<?xml version="1.0" ?>
<!DOCTYPE plugin PUBLIC "-//JPF//Java Plug-in Manifest 1.0" "http://jpf.sourceforge.net/plugin_1_0.dtd">
<plugin id="org.drftpd.master.plugins.prebw" version="3.4.2">
    <doc>
		<doc-text>Displays pre stats on irc</doc-text>
	</doc>
    <attributes>
		<attribute id="DefaultBuild" value="false" />
		<attribute id="MustBuild" value="false" />
	</attributes>
	<requires>
        <import plugin-id="org.drftpd.master.commands.pre" exported="true" />
        <import plugin-id="org.drftpd.master.commands.dataconnection" exported="true" />
		<import plugin-id="org.drftpd.master.plugins.sitebot" exported="true" />
	</requires>
	<runtime>
		<library id="org.drftpd.master.plugins.prebw" path="classes/" type="code">
			<export prefix="*" />
		</library>
	</runtime>

    <extension plugin-id="org.drftpd.master.plugins.sitebot" point-id="Announce" id="PREBWAnnounce">
		<parameter id="Class" value="org.drftpd.master.plugins.prebw.announce.PREBWAnnouncer" />
	</extension>

	<extension plugin-id="org.drftpd.master.commands.pre" point-id="PostHook" id="PREBWPostHook">
		<parameter id="ParentMethod" value="doSITE_PRE" />
		<parameter id="HookClass" value="org.drftpd.master.plugins.prebw.PREBWPostHook" />
		<parameter id="HookMethod" value="doPREPostHook" />
		<parameter id="Priority" value="1" />
	</extension>

    <extension plugin-id="org.drftpd.master.commands.dataconnection" point-id="PostHook" id="PREBWRETRPostHook">
		<parameter id="ParentMethod" value="doRETR" />
		<parameter id="HookClass" value="org.drftpd.master.plugins.prebw.PREBWPostHook" />
		<parameter id="HookMethod" value="doRETRPostHook" />
		<parameter id="Priority" value="10" />
	</extension>
</plugin>
