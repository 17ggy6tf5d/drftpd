<?xml version="1.0" ?>
<!DOCTYPE plugin PUBLIC "-//JPF//Java Plug-in Manifest 1.0" "http://jpf.sourceforge.net/plugin_1_0.dtd">
<plugin id="org.drftpd.commands.speedtest" version="3.1.0">
	<doc>
		<doc-text>This plugin listens for uploads in specified paths and announce result to irc.
			After file is completed it is immediately removed.
			It also provides FTP/IRC command to speedtest slaves against speedtest.net.
		</doc-text>
	</doc>
	<attributes>
		<attribute id="DefaultBuild" value="false" />
		<attribute id="MustBuild" value="false" />
	</attributes>
	
	<requires>
		<import plugin-id="org.drftpd.protocol.speedtest.master" exported="true" />
		<import plugin-id="org.drftpd.commands.dataconnection" exported="true" />
		<import plugin-id="org.drftpd.commandmanager" exported="true" />
		<import plugin-id="org.drftpd.plugins.sitebot" exported="true" />
		<import plugin-id="master" exported="true" />
	</requires>
	
	<runtime>
		<library id="org.drftpd.commands.speedtest" path="classes/" type="code">
			<export prefix="*" />
		</library>
	</runtime>

	<extension plugin-id="org.drftpd.commandmanager" point-id="Command" id="SpeedTestHandler" />

	<extension-point id="PreHook" parent-plugin-id="org.drftpd.commandmanager" parent-point-id="CommandPreHook" />
	<extension-point id="PostHook" parent-plugin-id="org.drftpd.commandmanager" parent-point-id="CommandPostHook" />

	<extension plugin-id="org.drftpd.commands.speedtest" point-id="PreHook" id="doSITE_SPEEDTESTPerm">
		<parameter id="ParentMethod" value="doSITE_SPEEDTEST" />
		<parameter id="HookClass" value="org.drftpd.commands.prehook.permissions.PermissionPreHook" />
		<parameter id="HookMethod" value="doPermissionCheck" />
		<parameter id="Priority" value="1" />
	</extension>

	<extension plugin-id="org.drftpd.plugins.sitebot" point-id="Announce" id="SpeedTestAnnounce">
		<parameter id="Class" value="org.drftpd.commands.speedtest.announce.SpeedTestAnnouncer" />
	</extension>

	<extension plugin-id="org.drftpd.commands.dataconnection" point-id="PostHook" id="SpeedTestSTORPostHook">
		<parameter id="ParentMethod" value="doSTOR" />
		<parameter id="HookClass" value="org.drftpd.commands.speedtest.SpeedTestPostHook" />
		<parameter id="HookMethod" value="doSTORPostHook" />
		<parameter id="Priority" value="1" />
	</extension>
</plugin>