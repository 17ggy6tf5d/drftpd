<?xml version="1.0" ?>
<!DOCTYPE plugin PUBLIC "-//JPF//Java Plug-in Manifest 1.0" "http://jpf.sourceforge.net/plugin_1_0.dtd">
<plugin id="org.drftpd.master.vfs.index.lucene.extensions.imdb" version="3.4.2">
	<doc>
		<doc-text>This plugin provides queries imdb metadata in the lucene index</doc-text>
	</doc>
	<attributes>
		<attribute id="DenyUnload" value="true" />
	</attributes>
	<requires>
		<import plugin-id="org.drftpd.master.protocol.imdb.common" exported="true" />
		<import plugin-id="org.drftpd.master.vfs.index.lucene" exported="true" />
	</requires>
	<runtime>
		<library id="org.drftpd.master.vfs.index.lucene.extensions.imdb" path="classes/" type="code">
			<export prefix="*" />
		</library>
	</runtime>

	<extension plugin-id="org.drftpd.master.vfs.index.lucene" point-id="IndexData" id="IMDBDataExtension">
		<parameter id="Class" value="org.drftpd.master.vfs.index.lucene.extensions.imdb.IMDBDataExtension"/>
	</extension>
	<extension plugin-id="org.drftpd.master.vfs.index.lucene" point-id="QueryTerm" id="IMDBQueryExtension">
		<parameter id="Class" value="org.drftpd.master.vfs.index.lucene.extensions.imdb.IMDBQueryExtension"/>
	</extension>
</plugin>
