<?xml version="1.0" ?>
<!DOCTYPE plugin PUBLIC "-//JPF//Java Plug-in Manifest 1.0" "http://jpf.sourceforge.net/plugin_1_0.dtd">
<plugin id="org.drftpd.master.commands.speedtest.net" version="3.4.2">
	<doc>
		<doc-text>Provides FTP/IRC command to speedtest slaves against speedtest.net.
		</doc-text>
	</doc>
	<attributes>
		<attribute id="DefaultBuild" value="false" />
		<attribute id="MustBuild" value="false" />
	</attributes>
	
	<requires>
		<import plugin-id="org.drftpd.master.protocol.speedtest.net.master" exported="true" />
		<import plugin-id="org.drftpd.master.commandmanager" exported="true" />
		<import plugin-id="org.drftpd.master.plugins.sitebot" exported="true" />
		<import plugin-id="master" exported="true" />
	</requires>
	
	<runtime>
		<library id="org.drftpd.master.commands.speedtest.net" path="classes/" type="code">
			<export prefix="*" />
		</library>
		<library id="gson" path="../../../lib/gson-2.8.6.jar" type="code">
			<export prefix="*" />
		</library>
	</runtime>

	<extension plugin-id="org.drftpd.master.commandmanager" point-id="Command" id="SpeedTestHandler" />

	<extension-point id="PreHook" parent-plugin-id="org.drftpd.master.commandmanager" parent-point-id="CommandPreHook" />
	<extension-point id="PostHook" parent-plugin-id="org.drftpd.master.commandmanager" parent-point-id="CommandPostHook" />

	<extension plugin-id="org.drftpd.master.commands.speedtest.net" point-id="PreHook" id="doSITE_SPEEDTESTPerm">
		<parameter id="ParentMethod" value="doSITE_SPEEDTEST" />
		<parameter id="HookClass" value="org.drftpd.master.commands.prehook.permissions.PermissionPreHook" />
		<parameter id="HookMethod" value="doPermissionCheck" />
		<parameter id="Priority" value="1" />
	</extension>
</plugin>