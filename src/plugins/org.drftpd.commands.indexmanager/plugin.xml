<?xml version="1.0" ?>
<!DOCTYPE plugin PUBLIC "-//JPF//Java Plug-in Manifest 1.0" "http://jpf.sourceforge.net/plugin_1_0.dtd">
<plugin id="org.drftpd.master.commands.indexmanager" version="3.4.2">
	<attributes>
		<attribute id="DefaultBuild" value="true" />
		<attribute id="MustBuild" value="true" />
	</attributes>
	<requires>
		<import plugin-id="org.drftpd.master.commandmanager" exported="true" />
		<import plugin-id="org.drftpd.master.commands.prehook.permissions" exported="true" />
	</requires>
	<runtime>
		<library id="org.drftpd.master.commands.indexmanager" path="classes/" type="code">
			<export prefix="*" />
		</library>
	</runtime>
	<extension-point id="PreHook" parent-plugin-id="org.drftpd.master.commandmanager" parent-point-id="CommandPreHook" />
	<extension-point id="PostHook" parent-plugin-id="org.drftpd.master.commandmanager" parent-point-id="CommandPostHook" />
	
	<extension plugin-id="org.drftpd.master.commandmanager" point-id="Command" id="IndexManagerHandler" />
	
	<extension plugin-id="org.drftpd.master.commands.indexmanager" point-id="PreHook" id="doRebuildIndexPerm">
		<parameter id="ParentMethod" value="doRebuildIndex" />
		<parameter id="HookClass" value="org.drftpd.master.commands.prehook.permissions.PermissionPreHook" />
		<parameter id="HookMethod" value="doPermissionCheck" />
		<parameter id="Priority" value="1" />
	</extension>

	<extension plugin-id="org.drftpd.master.commands.indexmanager" point-id="PreHook" id="doRefreshIndexPerm">
		<parameter id="ParentMethod" value="doRefreshIndex" />
		<parameter id="HookClass" value="org.drftpd.master.commands.prehook.permissions.PermissionPreHook" />
		<parameter id="HookMethod" value="doPermissionCheck" />
		<parameter id="Priority" value="1" />
	</extension>
	
	<extension plugin-id="org.drftpd.master.commands.indexmanager" point-id="PreHook" id="doIndexStatusPerm">
		<parameter id="ParentMethod" value="doIndexStatus" />
		<parameter id="HookClass" value="org.drftpd.master.commands.prehook.permissions.PermissionPreHook" />
		<parameter id="HookMethod" value="doPermissionCheck" />
		<parameter id="Priority" value="1" />
	</extension>
</plugin>